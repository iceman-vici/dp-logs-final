# Environment Variables for Docker Compose

# Node Environment
NODE_ENV=development

# Dialpad API Token (Required)
DIALPAD_TOKEN=your_dialpad_api_token_here

# Database Configuration (Used by Docker Compose)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=dialpad_logs

# API Configuration
API_PORT=3001
FRONTEND_PORT=3000

# CORS Origins
CORS_ORIGINS=http://localhost:3000

# pgAdmin Credentials (optional)
PGADMIN_EMAIL=admin@dialpad.local
PGADMIN_PASSWORD=admin