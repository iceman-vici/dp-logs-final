# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=dp_calls
DB_PASSWORD=dp_logs
DB_NAME=dialpad_calls_db

# Dialpad API Configuration
DIALPAD_TOKEN=your_dialpad_api_token

# Webhook Configuration
WEBHOOK_SECRET=dp_call_logs

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# IMPORTANT: Add your server IP address here for external access
# Example: CORS_ORIGINS=http://localhost:3000,http://192.168.1.100:3000,http://192.168.1.100:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend API URL Configuration
# IMPORTANT: Update this with your server IP for external access
# Example: REACT_APP_API_URL=http://192.168.1.100:3001/api
REACT_APP_API_URL=http://localhost:3001/api

# Frontend WebSocket URL Configuration
# IMPORTANT: Update this with your server IP for external access
# Example: REACT_APP_WS_URL=http://192.168.1.100:3001
REACT_APP_WS_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
