FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies for node-gyp and nodemon
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies including dev dependencies
RUN npm install

# Install nodemon globally
RUN npm install -g nodemon

# Expose port
EXPOSE 3001

# Start command with nodemon for hot reload
CMD ["npm", "run", "dev"]